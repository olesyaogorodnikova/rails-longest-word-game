<h1>New Game</h1>


<div class = "container">

  <ul class = "ul_container">
    <% @letters.each do |letter| %>
    <li><%= letter %></li>
    <% end %>
  </ul>

<p>What is the longest word you can find?</p>

<form action="/score">
  <input type="text" name="answer">
  <input type="hidden" name="letters" value = "<%= @letters.join %>">
  <input type="submit" value="play" name= "button">
</form>

</div>
